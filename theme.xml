<?xml version="1.0"?>
<theme name="Broadcaster" designer="Aleksander Baćko Jeličič and Pete Haughie" version="1.1" require="4.0">
    <description>This theme for Newscoop 4 integrates support for the Airtime broadcast automation system. It is based on Rockstar by Stephanie Miebach and Christian Kobben.</description>
    
    <presentation-img src="themethumbs/broadcaster-front.png" name="Front page" />
    <presentation-img src="themethumbs/broadcaster-section.png" name="Section page" />
    <presentation-img src="themethumbs/broadcaster-article.png" name="Article page" />
    
    <!-- =============================== -->
    
  <output name="Web">
    <frontPage src="front.tpl" />
    <sectionPage src="section.tpl" />
    <articlePage src="article.tpl" />
    <errorPage src="section.tpl" />
  </output>
  
  <renditions>
    <rendition name="front" width="610" height="372" specs="crop" />
    <rendition name="big" width="600" height="400" specs="crop" />
    <rendition name="onethird" width="290" height="190" specs="crop" />
    <rendition name="onehalf" width="450" height="295" specs="crop" />
    <rendition name="square" width="130" height="130" specs="crop" />
    <rendition name="square large" width="290" height="290" specs="crop" />
    <rendition name="show" width="930" height="260" specs="crop" />
  </renditions>

  <articlesLists>
    <list name="Carousel-ar">
      <template file="article.tpl" />
    </list>
    <list name="Carousel-az">
      <template file="article.tpl" />
    </list>
    <list name="Carousel-da">
      <template file="article.tpl" />
    </list>
    <list name="Carousel-en">
      <template file="article.tpl" />
    </list>
    <list name="Carousel-hr">
      <template file="article.tpl" />
    </list>
    <list name="Carousel-hu">
      <template file="article.tpl" />
    </list>
    <list name="Carousel-hy_AM">
      <template file="article.tpl" />
    </list>
    <list name="Carousel-it">
      <template file="article.tpl" />
    </list>
    <list name="Carousel-ka">
      <template file="article.tpl" />
    </list>
    <list name="Carousel-pt">
      <template file="article.tpl" />
    </list>
    <list name="Carousel-ru">
      <template file="article.tpl" />
    </list>
    <list name="Carousel-zh">
      <template file="article.tpl" />
    </list>
  </articlesLists>

</theme>
